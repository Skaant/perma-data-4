.row
  h2.text-center.col-12.my-4= `🏹🍓 ${ translation.sections.sources } 🌺👩🏿‍🔬🐇`
.row
  .col-12.container
    each source, key in sources
      .row(
        id= key
      )
        ol.alert.alert-light.col-12.col-md-10.offset-md-1.breadcrumb
          each parent, index in source.parents
            li.breadcrumb-item
              if (index === 0)
                b= parent.title
                if (parent.authors)
                  span= ` (${ parent.authors })`
              else
                span= parent.title
          li.breadcrumb-item.ml-auto
            b= source.title

